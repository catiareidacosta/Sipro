@model Sipro_2017.OrdemFabrico
@{
    ViewBag.Title = "Quebras";
}
<h2>Create</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
     <div class="form-horizontal">
            <h4>Inserir Quebras : @ViewBag.id  </h4>
            <hr />

         <script type="text/javascript">
             function gravalinha() {
                 var qtdProduto = document.getElementById("qtd").value;
                    if (qtdProduto == "") {
                        alert("Preenchimento quantidade obrigatório!");
                    } else {
                        var idOF = document.getElementById('idOf');
                        var url = '@Url.Action("OfRegistoQuebras", "OrdemFabricoes", new { obs = -2})';
                        var opcoes = @ViewBag.id + ";" + qtdProduto;
                        var path = url.replace("-2", opcoes);
                        document.location = path;
                    }
                 return false;
              };
         </script>


             <div class="center-div">
                 <div class="col-lg-12">
                     <input type="submit" value="Gravar default" />
                     <input type="submit" value="Gravar" onclick="return gravalinha()" />
                     @Html.ActionLink("Termina Colocar em linha", "OfColocacaoEmLinhaSave", new { obs = ViewBag.id, qtd = ViewBag.quantidade })))
                     <input type="button" value="Cancelar" onclick="forwardMe('index')">
                     <script> function forwardMe(url) {document.location = '@Url.Action("OFSubMenu", "OrdemFabricoes", new { of = ViewBag.id })';} </script>
                 </div>
             </div>
            <div class="form-group">
                <div class="col-md-10">
                    <div class="col-md-10">
                        <input type='text' id='idOf' name='idOf' value=@ViewBag.id readonly="readonly" style="border:none">
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="col-md-10">
                        <p>@ViewBag.informativo</p>
                    </div>
                </div>
            </div>
             <div class="form-group">
                 <div class="col-md-10">
                     <div class="col-md-10">
                         @Html.Label("Referência")
                     </div>
                     <div class="col-md-10">
                         @Html.EditorFor(model => model.produto.codcomercial, new { htmlAttributes = new { @class = "form-control", @id = "gtin", @name = "gtin", @readonly = "readonly" } })
                     </div>
                 </div>
                 <div class="col-md-10">
                     <div class="col-md-10">
                         @Html.Label("Artigo")
                     </div>
                     <div class="col-md-10">
                         @Html.EditorFor(model => model.produto.descricao, new { htmlAttributes = new { @class = "form-control", @id = "referencia", @name = "referencia", @readonly = "readonly" } })
                     </div>
                 </div>
                 <div class="col-md-10">
                     <div class="col-md-10">
                         @Html.Label("Lote")
                     </div>
                     <div class="col-md-10">
                         @Html.EditorFor(model => model.LOTE, new { htmlAttributes = new { @class = "form-control", @id = "lote", @name = "lote", @readonly = "readonly" } })
                     </div>
                 </div>
                 <div class="col-md-10">
                     <div class="col-md-10">
                         @Html.Label("Validade")
                     </div>
                     <div class="col-md-10">
                         @Html.Editor("validadeProduto", new { htmlAttributes = new { @class = "form-control", @id = "vld", @name = "vld", @readonly = "readonly" } })
                     </div>
                 </div>
                 <div class="col-md-10">
                     <div class="col-md-10">
                         @Html.Label("Quantidade")
                     </div>
                     <div class="col-md-10">
                         @Html.Editor("numQuebras", new { htmlAttributes = new { @class = "form-control", @id = "qtd", @name = "qtd" } })
                     </div>
                 </div>
                 <div class="col-md-10">
                     <div class="col-md-10">
                         @Html.Label("Motivo")
                     </div>
                     <div class="col-md-10">
                         @Html.DropDownList("motivosQuebra", null, "--Select One--", htmlAttributes: new { @class = "form-control", @id = "motivoQuebra", @name = "motivoQuebra" })
                         @Html.ValidationMessageFor(model => model.MotivoQuebra, "", new { @class = "text-danger" })
                     </div>
                 </div>
             </div>
        </div>
    }
    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
