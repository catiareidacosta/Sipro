@model Sipro_2017.Formaco

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <h2>Novo</h2>
    <div class="center-div">
        <div>
            <input type="submit" value="Gravar" />
            <input type="button" value="Cancelar" onclick="forwardMe('index')">
            <script> function forwardMe(url) { window.location.href = url;} </script>
        </div>
    </div>
    <div class="form-horizontal">
        <h4>Formaco</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @Html.LabelFor(model => model.dataFormacao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.dataFormacao, "{0:dd-MM-yyyy}", new { @class = "datepicker", @size = "8" })
                @Html.ValidationMessageFor(model => model.dataFormacao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tipoOnJob_id, "tipoOnJob_id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("tipoOnJob_id", null, "--Select One--", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tipoOnJob_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nomeFormacao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomeFormacao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomeFormacao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.numHoras, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.numHoras, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numHoras, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
